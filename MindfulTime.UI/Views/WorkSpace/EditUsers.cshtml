@using OpenClasses

@{
    ViewData["Title"] = "EditUsers";
    var users = ViewBag.AllUsers as List<UserDto>;
}

<div class="container mt-5">
    <h1 class="mb-4">Управление пользователями</h1>
    <button type="button" class="btn btn-primary mb-3" data-toggle="modal" data-target="#addUserModal">
        Добавить пользователя
    </button>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Имя</th>
                <th>Email</th>
                <th>Роль</th>
                <th>Действие</th>
            </tr>
        </thead>
        <tbody>
            @if (users.Count > 0)
            {
                @foreach (var user in users)
                {
                    <tr>
                        <td>@user.Name</td>
                        <td>@user.Email</td>
                        <td>@user.Role</td>
                        <td>
                            <button type="button" class="btn btn-warning btn-sm" data-toggle="modal" data-target="#editUserModal" data-id="@user.Id">Изменить</button>
                            <button type="button" class="btn btn-danger btn-sm" onclick="deleteUser('@user.Id')">Удалить</button>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<!-- Add User Modal -->
<div class="modal fade" id="addUserModal" tabindex="-1" aria-labelledby="addUserModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addUserModalLabel">Добавить пользователя</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="addUserForm">
                    <div class="form-group">
                        <label for="addUserName">Имя</label>
                        <input type="text" class="form-control" id="addUserName" name="Name" required>
                    </div>
                    <div class="form-group">
                        <label for="addUserEmail">Email</label>
                        <input type="email" class="form-control" id="addUserEmail" name="Email" required>
                    </div>
                    <div class="form-group">
                        <label for="addUserRole">Роль</label>
                        <input type="text" class="form-control" id="addUserRole" name="Role" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Добавить</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Edit User Modal -->
<div class="modal fade" id="editUserModal" tabindex="-1" aria-labelledby="editUserModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editUserModalLabel">Изменить пользователя</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="editUserForm">
                    <input type="hidden" id="editUserId" name="Id">
                    <div class="form-group">
                        <label for="editUserName">Имя</label>
                        <input type="text" class="form-control" id="editUserName" name="Name" required>
                    </div>
                    <div class="form-group">
                        <label for="editUserEmail">Email</label>
                        <input type="email" class="form-control" id="editUserEmail" name="Email" required>
                    </div>
                    <div class="form-group">
                        <label for="editUserRole">Роль</label>
                        <input type="text" class="form-control" id="editUserRole" name="Role" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Сохранить изменения</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function deleteUser(userId) {
        $.ajax({
            url: '/WorkSpace/DeleteUser/' + userId,
            type: 'DELETE',
            success: function (result) {
                location.reload();
            }
        });
    }

    $('#editUserModal').on('show.bs.modal', function (event) {
        var button = $(event.relatedTarget);
        var userId = button.data('id');

        $.ajax({
            url: '/WorkSpace/GetUser/' + userId,
            type: 'GET',
            success: function (user) {
                $('#editUserId').val(user.Id);
                $('#editUserName').val(user.Name);
                $('#editUserEmail').val(user.Email);
                $('#editUserRole').val(user.Role);
            }
        });
    });

    $('#addUserForm').on('submit', function (event) {
        event.preventDefault();
        $.ajax({
            url: '/WorkSpace/AddUser',
            type: 'POST',
            data: $(this).serialize(),
            success: function (result) {
                location.reload();
            }
        });
    });

    $('#editUserForm').on('submit', function (event) {
        event.preventDefault();
        $.ajax({
            url: '/WorkSpace/EditUser',
            type: 'POST',
            data: $(this).serialize(),
            success: function (result) {
                location.reload();
            }
        });
    });
</script>
